<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    tools:context=".FrontEnd.Activities.MainActivity.Fragments.ChatsFragment.ChatPreviewFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/userIconFrame"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="60dp">
    <ImageView
        android:id="@+id/chatIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:src="@drawable/ic_user_icon"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/lastMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="100dp"
        android:textColor="#828282"
        android:textSize="15sp"
        android:layout_marginTop="35dp"/>
    <TextView
        android:id="@+id/lastMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textColor="#828282"
        android:layout_marginRight="15dp"
        android:textSize="15sp"/>

</RelativeLayout>