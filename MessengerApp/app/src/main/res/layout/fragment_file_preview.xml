<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white"
    android:id="@+id/filePreviewRoot"
    tools:context=".FrontEnd.Activities.ChatActivity.Fragments.FilePreviewFragment">

    <ImageView
        android:id="@+id/filePreview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_file_icon"
        />
    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/filePreview"
        android:layout_marginLeft="100dp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/detachFileIcon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_icon"/>


</RelativeLayout>