<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".FrontEnd.Activities.AuthorizationActivity.Fragments.LoginFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A238FF"
        android:text="@string/login_page_title"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/passwordInputFrame"
        android:layout_marginBottom="150dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/passwordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/password_input_page_hint"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/passwordInputFrame"
        android:layout_marginBottom="80dp"/>
    <FrameLayout
        android:id="@+id/passwordInputFrame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/passwordRepeatFrame"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/default_info_input_shape">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textColorHint="#808080"
            android:hint="Password"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/passwordRepeatFrame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/continueButton"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/default_info_input_shape">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordRepeat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textColorHint="#808080"
            android:hint="Repeat password"
            />
    </FrameLayout>
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"
        android:text="Continue"
        android:textSize="17sp"
        android:background="@drawable/second_button_shape"/>


</RelativeLayout>